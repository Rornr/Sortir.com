{% extends 'base.html.twig' %}

{% block title %}Hello CreerSortieController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <h1>Créer une sortie</h1>
    <div>
        Nom de la sortie : {{ form(sortieForm.Nom_de_la_sortie) }}
    </div>
    <div>
        Date et heure de sortie : {{ form(sortieForm.Date_la_sortie) }}
    </div>
    <div>
        Date limite d'inscription : {{ form(sortieForm.date_limite_inscription) }}
    </div>
    <div>
        Nombre de place : {{ form(sortieForm.place) }}
    </div>
    <div>
        Durée : {{ form(sortieForm.duree) }}
    </div>
    <div>
        Description et infos : {{ form(sortieForm.description_et_infos) }}
    </div>
    <div>
        Campus : {{ form(sortieForm.campus) }}
    </div>
    <div>
        Ville : {{ form(sortieForm.ville) }}
    </div>
    <div>
        Lieu : {{ form(sortieForm.lieu) }}
    </div>
    <div>
        Rue : {{ form(sortieForm.rue) }}
    </div>
    <div>
        Code postal : {{ form(sortieForm.code_postal) }}
    </div>
    <div>
        Latitude : {{ form(sortieForm.latitude) }}
    </div>
    <div>
        Longitude : {{ form(sortieForm.longitude) }}
    </div>
    <div class="boutonSortie">
        <input type="submit" name="Enregistrer" id="Enregistrer">
        <input type="submit" name="Publier la sortie" id="Publier la sortie">
        <input type="reset" name="Annuler" id="Annuler">
    </div>

</div>
{% endblock %}
