{% extends 'base.html.twig' %}

{% block title %}Hello CreerSortieController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>


    <div>
        <h1>Cr√©er une sortie</h1>

        {{ form_start(sortieForm) }}
        {{ form_row(sortieForm.nomDeLaSortie) }}
        {{ form_row(sortieForm.dateLaSortie) }}
        {{ form_row(sortieForm.dateLimiteInscription) }}
        {{ form_row(sortieForm.place)}}
        {{ form_row(sortieForm.duree) }}
        {{ form_row(sortieForm.descriptionEtInfos) }}
        {{ form_row(sortieForm.campus) }}
        {{ form_row(sortieForm.ville) }}
        {{ form_row(sortieForm.lieu) }}
        {{ form_row(sortieForm.rue) }}


        <input type="hidden" name="token" value="{{ csrf_token('form') }}"/>

        <div class="boutonSortie">
            <button type="submit" class="btn">S'enregistrer</button>
            <input type="submit" name="Publier la sortie" id="Publier la sortie" value="Publier la sortie">
            <input type="reset" name="Annuler" id="Annuler" value="Annuler">
        </div>
        {{ form_end(sortieForm, {'render_rest': false}) }}

    </div>
{% endblock %}
